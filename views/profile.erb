<!-- Edit Account Details  -->

<h3><%=  @user.username  %></h3>
<h3><%=  @user.first  %></h3>
<h3><%=  @user.last  %></h3>
<h3><%=  @user.email  %></h3> 


<form action="/post/<%= @user.id %>/profile" method="POST">
	<label for="first">First Name:</label>
	<input type="text" name="first">
	<label for="last">Last Name:</label>
	<input type="text" name="last">
	<label for="email">Email:</label>
	<input type="text" name="email">
	<input type="submit">
</form>

<a href="/post/<%= @user.id %>/profile/delete" name="_method" value="delete">Delete My Account</a>